<div class = "container px-5 px-sm-0">
  <div class = "row">
    <h3 class = "mx-auto">ランキング画面</h3>
  </div>

  <div class = "row">
    <div class = "col text-center">
      <% @ranks.each do |rank| %>
        <div class = "card">
          <div class = "card-body">
            <%= link_to rank.title, post_path(rank) %>
            コメント: <%= rank.comments.count %>件
            <%= render "posts/post_favorite", post: rank %>
            閲覧数: <%= rank.impressionist_count(:filter => :session_hash) %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>