<div class = "container">
  <div class = "row">
    <div class = "col">
      <% visitor = notification.visitor %>
      <% visited = notification.visited %>

      <div class = "card mx-auto">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= link_to user_path(visitor), class: "user-show-link" do %>
              <%= attachment_image_tag visitor, :user_image, size: "30x30" %>
              <%= visitor.user_name %>
            <% end %>
            さんが

            <% case notification.action %>
              <% when "comment" then %>
                <%= link_to "あなたの投稿", notification.post, class: "post-title-link" %>
                <span>にコメントしました</span>
              <% when "favorite" %>
                <%= link_to "あなたの投稿", notification.post, class: "post-title-link" %>
                <span>にいいねしました</span>
              <% when "follow" %>
                <span>あなたをフォローしました</span>
            <% end %><br />

              <time datetime="<%= notification.created_at %>" class = "float-right">
                <%= time_ago_in_words(notification.created_at) %>
              </time>

          </li>
        </ul>

      </div>


    </div>
  </div>
</div>