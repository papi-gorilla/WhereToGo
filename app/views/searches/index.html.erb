<div class = "container px-5 px-sm-0">
  <div class = "row">
    <h3 class = "mx-auto">検索結果一覧画面</h3>
  </div>

  <div class = "row">
    <div class = "col text-center">
      <% if @range == "Post" %>
        <% @posts.each do |post| %>
          <div class = "card">
            <div class = "card-body">
              <%= link_to post.title, post_path(post) %>
              コメント: <%= post.comments.count %>件
              <%= render "posts/post_favorite", post: post %>
              閲覧数: <%= post.impressionist_count(:filter => :session_hash) %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>