<div class = "container px-5 px-sm-0">
  <div class = "row">
    <h3 class = "mx-auto">ログイン画面</h3>
  </div>

  <div class = "row">
    <div class = "col text-center">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.label "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-3 mx-auto" %><br />

        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-3 mx-auto" %><br />

        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        <% end %><br />

        <%= f.submit "ログイン", class: "btn btn-success" %>

      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
