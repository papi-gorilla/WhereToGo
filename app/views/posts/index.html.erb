<div class = "container">
  <div class = "row">
    <h3 class = "mx-auto">投稿一覧ページ（トップページ）</h3>
  </div>

  <div class = "row">
    <div class = "col text-center">
      <% @posts.each do |post| %>
        <%= link_to post.title, post_path(post) %>
        <%= render "post_favorite", post: post %>
        コメント: <%= post.comments.count %>件
      <% end %>
    </div>
  </div>

</div>