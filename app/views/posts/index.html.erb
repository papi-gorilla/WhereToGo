<div class = "container px-5 px-sm-0">
  <div class = "row">
    <h3 class = "mx-auto">投稿一覧画面（トップ画面）</h3>
  </div>

  <div class = "row">
    <div class = "col card-deck mx-a">
      <% @posts.each do |post| %>
        <div class = "post_<%= post.id %> col-3">
          <%= render "posts/post_index", post: post %>
        </div>
      <% end %>
    </div>
  </div>

</div>