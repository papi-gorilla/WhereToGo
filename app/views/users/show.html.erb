<div class = "container px-5 px-sm-0">
  <div class = "row">
    <h3 class = "mx-auto">ユーザー詳細画面</h3>
  </div>

  <div class = "row">
    <div class = "col text-center">
      <%= attachment_image_tag @user, :user_image, size: "100x100", fallback: "no_image.jpeg", class: "user_image mb-3" %><br />

      <strong>
        <p><%= @user.user_name %></p>
      </strong><br />

      <p><%= @user.introduction %></p><br />

      <% @post.each do |post| %>
        <p><%= link_to post.title, post_path(post) %></p>
        <%= render "posts/post_favorite", post: post %>
      <% end %><br />

      <p><%= link_to "編集", edit_user_path(@user) %></p>

    </div>
  </div>

</div>